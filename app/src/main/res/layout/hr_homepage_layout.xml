<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/roll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></com.jude.rollviewpager.RollPagerView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:alpha="0.7"
                    android:background="@drawable/search_bg_rl">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/tv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:drawableLeft="@mipmap/sousuo"
                        android:drawablePadding="@dimen/space_10"
                        android:hint="简历搜索"
                        android:paddingLeft="10dp"
                        android:paddingRight="200dp"
                        android:singleLine="true"
                        android:textColorHint="@color/text_gray"
                        android:textSize="@dimen/text_size_13" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@color/text_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shoucang"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/shoucang2222"
                    android:text="收藏夹" />

                <TextView
                    android:id="@+id/tv_deliever"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/shoujian"
                    android:text="收件箱" />

                <TextView
                    android:id="@+id/iv_go2"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/xiaoyuan"
                    android:text="校园招聘" />

                <TextView
                    android:id="@+id/tv_hot_news"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/redian"
                    android:text="政府公告" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_consule"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/qiuzhizixun"
                    android:text="政府公告" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/text_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_delay_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/co_intro_icon"
                        android:drawablePadding="@dimen/space_5"
                        android:text=""
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_delay_name"
                        android:text="推荐人才"
                        android:textSize="@dimen/text_size_14"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_divider_2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:background="@color/text_blue_new" />

                    <TextView
                        android:id="@+id/tv_more_delay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/space_20"
                        android:paddingRight="@dimen/space_15"
                        android:text="更多"
                        android:textColor="#878787"
                        android:textSize="@dimen/text_size_11" />

                </RelativeLayout>

                <com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:id="@+id/ls_replay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"></com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/text_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_hot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/co_new_iocn"
                        android:drawablePadding="@dimen/space_5"
                        android:text=""
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_hot_name"
                        android:text="最新人才"
                        android:textSize="@dimen/text_size_14"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_divider_2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:background="@color/text_blue_new" />

                    <TextView
                        android:id="@+id/tv_more4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/space_20"
                        android:paddingRight="@dimen/space_15"
                        android:text="更多"
                        android:textColor="#878787"
                        android:textSize="@dimen/text_size_11" />

                </RelativeLayout>

                <com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:id="@+id/ls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"></com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/text_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_new_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/co_people_icon"
                        android:drawablePadding="@dimen/space_5"
                        android:text=""
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_new_name"
                        android:text="精英人才"
                        android:textSize="@dimen/text_size_14"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_divider_2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:background="@color/text_blue_new" />

                    <TextView
                        android:id="@+id/tv_more5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/space_20"
                        android:paddingRight="@dimen/space_15"
                        android:text="更多"
                        android:textColor="#878787"
                        android:textSize="@dimen/text_size_11" />

                </RelativeLayout>

                <com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:id="@+id/ls_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"></com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_consulte"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bb_speak" />

                <ImageView
                    android:layout_marginLeft="@dimen/space_10"
                    android:id="@+id/iv_xuanjiang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bb_job" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>