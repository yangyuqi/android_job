<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_layout"/>

    <ScrollView
        android:layout_margin="@dimen/space_15"
        android:background="@mipmap/beijing"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingBottom="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginTop="@dimen/space_8"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="技能评价"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/text_black"
                android:drawableLeft="@mipmap/jinengpingjia__qq"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/space_5"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_5"
                android:src="@mipmap/xian__qq"
                />

            <RelativeLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技能/语言"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_12"
                    />

                <RelativeLayout
                    android:background="@drawable/user_info_bg"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:textColor="@color/text_normal_gray"
                        android:background="@null"
                        android:id="@+id/tv_city"
                        android:paddingLeft="@dimen/space_10"
                        android:textSize="@dimen/text_size_13"
                        android:layout_centerVertical="true"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView

                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="掌握程度"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_12"
                    />

                <RelativeLayout
                    android:background="@drawable/user_info_bg"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/text_normal_gray"
                        android:gravity="start"
                        android:layout_toLeftOf="@+id/iv_iocn"
                        android:id="@+id/tv_use_deeper"
                        android:paddingLeft="@dimen/space_10"
                        android:textSize="@dimen/text_size_13"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:id="@+id/iv_iocn"
                        android:padding="@dimen/space_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/sanjiao"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                ></LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_add"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginTop="@dimen/space_10"
                android:drawablePadding="@dimen/space_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加技能评价"
                android:textSize="@dimen/text_size_11"
                android:drawableLeft="@mipmap/tianjia_copy_5"
                />

            </LinearLayout>


    </ScrollView>

</LinearLayout>