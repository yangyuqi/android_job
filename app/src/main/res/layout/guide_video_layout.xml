<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/uu_back"
        android:padding="@dimen/space_15"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不会拍？先看看他们怎么展现的吧!"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_21"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_25"
        />

    <LinearLayout
        android:paddingLeft="@dimen/space_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="@dimen/space_20"
        >

        <RelativeLayout
            android:background="@drawable/guide_rl_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:background="@drawable/guide_rl_bg"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="@dimen/text_size_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space_14"
                android:text="上滑下一个视频"
                android:drawableTop="@mipmap/uu_hand"
                android:background="@mipmap/uu_background"
                android:gravity="center_horizontal"
                android:drawablePadding="@dimen/space_10"
                android:paddingTop="@dimen/space_15"
                android:paddingBottom="@dimen/space_15"
                />

            <View
                android:alpha="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/guide_rl_bg"/>

    </RelativeLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_click"
                android:paddingBottom="@dimen/space_20"
                android:paddingTop="@dimen/space_25"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_j"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/uu_clcik"
                    android:text="猛戳"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20"
                    />

                <ImageView
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_j"
                    android:src="@mipmap/uu_click_u"
                    android:layout_marginLeft="@dimen/space_15"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_j"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="获取视频权益"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:background="@mipmap/uu_user_center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自我介绍"
                        android:textSize="@dimen/text_size_20"
                        android:textColor="#9F0E5E"
                        />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_10"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:text="可介绍自己的名字、年龄、求职意向、工作经历等。"
                        android:textColor="#ffffffff"
                        android:textSize="8sp"
                        />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:background="@mipmap/uu_user_jinneg"
                android:layout_marginTop="@dimen/space_20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技能秀"
                        android:textSize="@dimen/text_size_20"
                        android:textColor="#195A86"
                        />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_10"
                        android:layout_width="93dp"
                        android:layout_height="wrap_content"
                        android:text="你可以秀技能、秀作品、
秀才艺......
形式不限，任你展示"
                        android:textColor="#ffffffff"
                        android:textSize="8sp"
                        />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/do_video"
        android:gravity="center"
        android:paddingRight="@dimen/space_15"
        android:paddingLeft="@dimen/space_15"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/uu_do_video"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20"
        android:text="开始制作/本地上传"
        />

</LinearLayout>