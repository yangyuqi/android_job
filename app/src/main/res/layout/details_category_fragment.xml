<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridView
        android:horizontalSpacing="@dimen/space_10"
        android:verticalSpacing="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        android:paddingTop="@dimen/space_10"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:numColumns="3"
        android:id="@+id/gv"
        android:background="@color/text_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></GridView>

    <!--<ListView-->
        <!--android:dividerHeight="@dimen/space_5"-->
        <!--android:paddingBottom="@dimen/space_10"-->
        <!--android:background="@color/text_white"-->
        <!--android:divider="@null"-->
        <!--android:overScrollMode="never"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/ls"-->
        <!--&gt;</ListView>-->

    <com.donkingliang.labels.LabelsView
        android:background="@color/text_white"
        android:paddingBottom="@dimen/space_5"
        android:paddingTop="@dimen/space_5"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:id="@+id/labelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelBackground="@drawable/label_shai_bg"
        app:labelTextColor="@drawable/label_shai_text_color"
        app:labelTextSize="11sp"
        app:labelTextPaddingBottom="10dp"
        app:labelTextPaddingLeft="5dp"
        app:labelTextPaddingRight="5dp"
        app:labelTextPaddingTop="10dp"
        app:lineMargin="5dp"
        app:wordMargin="5dp"
        app:selectType="SINGLE"
        app:maxSelect="3"
        >


    </com.donkingliang.labels.LabelsView>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/tv_reset"
            android:textColor="@color/text_normal_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="重置"
            android:gravity="center"
            android:background="@color/text_white"
            />
        <TextView
            android:id="@+id/tv_sure"
            android:textColor="@color/text_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:background="#1989FA"
            />
    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/text_black"
        android:alpha="0.5"/>


</LinearLayout>