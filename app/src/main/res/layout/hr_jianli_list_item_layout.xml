<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/text_white"
        android:layout_width="match_parent"
        android:layout_height="245dp">

        <TextView
            android:textColor="#4A90E2"
            android:id="@+id/tv_statusm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textSize="@dimen/text_size_15"
            android:paddingRight="@dimen/space_20"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@mipmap/groweup"
            >

            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:id="@+id/ll"
                    android:layout_centerVertical="true"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.youzheng.tongxiang.huntingjob.UI.Widget.CircleImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:id="@+id/civ"
                        android:src="@mipmap/gggggroup"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/text_normal_gray"
                        android:text="UI设计师"
                        android:id="@+id/tv_status"
                        />
                    <ImageView
                        android:paddingRight="@dimen/space_10"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="@dimen/space_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_sex"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/group_25_nan"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/space_20"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ll"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_name"
                            android:textSize="@dimen/text_size_17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_black"
                            android:textStyle="bold"
                            android:text="吴奇隆"
                            />
                        <View
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/space_5"
                            android:background="@color/text_light_gray"
                            android:layout_width="@dimen/space_divider_2"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/space_5"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_sex"
                            android:textSize="@dimen/text_size_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="女"
                            />
                        <View
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/space_5"
                            android:background="@color/text_light_gray"
                            android:layout_width="@dimen/space_divider_2"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/space_5"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_age"
                            android:textSize="@dimen/text_size_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="1991-11-01"
                            />

                        <TextView
                            android:visibility="gone"
                            android:singleLine="true"
                            android:paddingRight="@dimen/space_10"
                            android:gravity="end"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_address"
                            android:textSize="@dimen/text_size_12"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:text="3小时前"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_style"
                        android:layout_marginTop="@dimen/space_2"
                        android:textColor="@color/text_normal_gray"
                        android:drawablePadding="@dimen/space_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:text="2年工作经验"
                        />
                    <TextView
                        android:id="@+id/tv_work_year"
                        android:layout_marginTop="@dimen/space_10"
                        android:textColor="@color/text_normal_gray"
                        android:drawablePadding="@dimen/space_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:text="已离职"
                        android:drawableLeft="@mipmap/jinyan"
                        />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/space_15"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_light_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/tv_xueli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@mipmap/xueli22"
                        android:textColor="@color/text_gray"
                        android:text="本科"
                        android:drawablePadding="@dimen/space_5"
                        android:textSize="@dimen/text_size_12"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:singleLine="true"
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@mipmap/xinzi"
                        android:textColor="@color/text_gray"
                        android:text="本科"
                        android:drawablePadding="@dimen/space_5"
                        android:textSize="@dimen/text_size_12"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/tv_see_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawableLeft="@mipmap/time_group_24"
                        android:textColor="@color/text_gray"
                        android:text="本科"
                        android:drawablePadding="@dimen/space_5"
                        android:textSize="@dimen/text_size_12"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:paddingRight="@dimen/space_15"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                >

                <RelativeLayout
                    android:id="@+id/rl_edit"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/zhiwei_item_bg"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    >

                    <TextView
                        android:id="@+id/tv_collect"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/text_size_12"
                        android:drawablePadding="@dimen/space_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textColor="@color/text_red"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_match"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/zhiwei_item_bg"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    >

                    <TextView
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/text_size_12"
                        android:drawablePadding="@dimen/space_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="不合适"
                        android:textColor="@color/text_red"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_redo"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/zhiwei_item_bg"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    >

                    <TextView
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/text_size_12"
                        android:drawablePadding="@dimen/space_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="通知面试"
                        android:textColor="@color/text_red"
                        />

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10"
            android:background="@color/bg_all"/>

    </LinearLayout>

</LinearLayout>