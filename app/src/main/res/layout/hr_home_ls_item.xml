<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/text_white"
        >

        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:id="@+id/ll"
                android:layout_centerVertical="true"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                >
                <com.youzheng.tongxiang.huntingjob.UI.Widget.CircleImageView
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:id="@+id/civ"
                    android:src="@mipmap/gggggroup"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:visibility="gone"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/text_normal_gray"
                    android:text="UI设计师"
                    android:id="@+id/tv_status"
                    />

                <ImageView
                    android:paddingRight="@dimen/space_10"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/space_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_sex"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/group_25_nan"
                    />

            </RelativeLayout>

            <LinearLayout
                android:paddingBottom="@dimen/space_3"
                android:layout_marginLeft="@dimen/space_20"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_name"
                        android:textSize="@dimen/text_size_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"
                        android:text="吴奇隆"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/zzz_get_video"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/space_10"
                        android:id="@+id/iv_has_vodeo"
                        android:visibility="gone"
                        />

                    <View
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@color/text_light_gray"
                        android:layout_width="@dimen/space_divider_2"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/space_5"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_sex"
                        android:textSize="@dimen/text_size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:text="女"
                        />
                    <View
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@color/text_light_gray"
                        android:layout_width="@dimen/space_divider_2"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        />
                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/space_5"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_age"
                        android:textSize="@dimen/text_size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:text="1991-11-01"
                        />

                    <TextView
                        android:visibility="gone"
                        android:singleLine="true"
                        android:paddingRight="@dimen/space_10"
                        android:gravity="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_address"
                        android:textSize="@dimen/text_size_12"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:text="3小时前"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_style"
                    android:layout_marginTop="@dimen/space_2"
                    android:textColor="@color/text_gray"
                    android:drawablePadding="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:text="2年工作经验"
                    />
                <TextView
                    android:id="@+id/tv_work_year"
                    android:layout_marginTop="@dimen/space_10"
                    android:textColor="@color/text_gray"
                    android:drawablePadding="@dimen/space_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:text="已离职"
                    />

                <RelativeLayout
                    android:layout_marginTop="@dimen/space_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="start"

                        android:id="@+id/tv_get_"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应聘职位:"
                        android:singleLine="true"
                        />

                    <TextView
                        android:singleLine="true"
                        android:layout_marginRight="100dp"
                        android:visibility="visible"
                        android:paddingTop="@dimen/space_1"
                        android:paddingBottom="@dimen/space_1"
                        android:paddingRight="@dimen/space_4"
                        android:paddingLeft="@dimen/space_4"
                        android:background="@drawable/label_bg4"
                        android:layout_marginLeft="@dimen/space_5"
                        android:layout_toRightOf="@+id/tv_get_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_get_job"
                        android:textSize="@dimen/text_size_11"
                        android:textColor="@color/text_gray"
                        />

                    <com.donkingliang.labels.LabelsView
                        android:layout_toRightOf="@+id/tv_get_"
                        android:id="@+id/labelView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:labelBackground="@drawable/label_bg4"
                        app:labelTextColor="@color/text_gray"
                        app:labelTextSize="10sp"
                        app:selectType="MULTI"
                        app:maxSelect="2"
                        app:labelTextPaddingBottom="2dp"
                        app:labelTextPaddingLeft="4dp"
                        app:labelTextPaddingRight="4dp"
                        app:labelTextPaddingTop="2dp"
                        android:layout_toLeftOf="@+id/tv_see_time"
                        >

                    </com.donkingliang.labels.LabelsView>

                    <TextView
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/text_gray"
                        android:id="@+id/tv_see_time"
                        android:layout_width="100dp"
                        android:gravity="end"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:text="2小时前更新"
                        />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:visibility="gone"
            android:layout_marginRight="@dimen/space_15"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_light_gray"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:paddingBottom="@dimen/space_5"
                    android:id="@+id/tv_xueli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/xueli22"
                    android:textColor="@color/text_gray"
                    android:text="本科"
                    android:drawablePadding="@dimen/space_5"
                    android:textSize="@dimen/text_size_12"
                    android:singleLine="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:paddingBottom="@dimen/space_5"
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/xinzi"
                    android:textColor="@color/text_gray"
                    android:text="本科"
                    android:drawablePadding="@dimen/space_5"
                    android:textSize="@dimen/text_size_12"
                    android:singleLine="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <TextView
                    android:paddingBottom="@dimen/space_5"
                    android:id="@+id/tv_see_timeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@mipmap/time_group_24"
                    android:textColor="@color/text_gray"
                    android:text="本科"
                    android:drawablePadding="@dimen/space_5"
                    android:textSize="@dimen/text_size_12"
                    android:singleLine="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/bg_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_10"/>

</LinearLayout>