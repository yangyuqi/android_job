<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header_layout"/>

    <RelativeLayout
        android:background="@color/text_white"
        android:id="@+id/rl_speak"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_normal_gray"
            android:layout_marginLeft="@dimen/space_10"
            android:drawablePadding="@dimen/space_20"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏蔽公司"
            />

        <ImageView
            android:layout_marginRight="@dimen/space_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jiantouyou"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/space_15"
        android:paddingRight="@dimen/text_size_13"
        android:paddingLeft="@dimen/text_size_13"
        android:background="@color/text_white"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有公司都能看到我"
            android:textColor="@color/text_normal_gray"
            android:textSize="@dimen/text_size_14"
            android:layout_centerVertical="true"
            />

        <Switch
            android:id="@+id/switvh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>