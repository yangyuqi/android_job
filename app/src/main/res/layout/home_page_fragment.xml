<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/roll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></com.jude.rollviewpager.RollPagerView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:alpha="0.7"
                    android:background="@drawable/search_bg_rl">

                    <TextView
                        android:id="@+id/tv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:drawableLeft="@mipmap/sousuo"
                        android:drawablePadding="@dimen/space_10"
                        android:hint="搜索职位"
                        android:paddingLeft="10dp"
                        android:paddingRight="200dp"
                        android:singleLine="true"
                        android:textColorHint="@color/text_gray"
                        android:textSize="@dimen/text_size_13" />

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@color/text_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shoucang"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/zhaopinhui"
                    android:text="收藏夹" />

                <TextView
                    android:id="@+id/tv_deliever"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/renshikaoshi"
                    android:text="投递箱" />

                <TextView
                    android:id="@+id/iv_go2"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/xiaoyuanzhaopin"
                    android:text="校园招聘" />

                <TextView
                    android:id="@+id/tv_hot_news"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/redianzixun"
                    android:text="政府公告" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_consule"
                    style="@style/text_style"
                    android:drawableTop="@mipmap/qiuzhizixun"
                    android:text="政府公共" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_intro_show"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="@dimen/space_10">

                <LinearLayout
                    android:background="@color/bg_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:paddingTop="@dimen/space_10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/text_white"
                        android:paddingBottom="@dimen/space_10">

                        <TextView
                            android:paddingLeft="@dimen/space_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/intriduce_icon"
                            android:drawablePadding="@dimen/space_3"
                            android:src="@mipmap/jjjj"
                            android:text="招聘推荐"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:paddingRight="@dimen/space_10"
                            android:id="@+id/tv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingLeft="@dimen/space_20"
                            android:text="更多"
                            android:textColor="#878787"
                            android:textSize="@dimen/text_size_11" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_divider_2"
                            android:layout_below="@+id/tv_more"
                            android:layout_marginTop="@dimen/space_8"
                            android:background="@color/text_blue_new" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/tv_more"
                            android:layout_marginTop="@dimen/space_8"
                            android:orientation="vertical"
                            android:scaleType="fitXY">

                            <RelativeLayout
                                android:id="@+id/rl_click"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/space_5"
                                android:layout_weight="1"
                                android:background="@color/text_white"
                                android:paddingLeft="@dimen/space_5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toRightOf="@+id/iv_logo"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/space_5"
                                    android:paddingTop="@dimen/space_5">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tv_home_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:layout_toLeftOf="@+id/tv_money"
                                            android:gravity="start"
                                            android:text="软件测试工程师"
                                            android:textColor="@color/text_main_gray"
                                            android:textSize="@dimen/text_size_13" />

                                        <TextView
                                            android:id="@+id/tv_money"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:layout_marginRight="@dimen/space_10"
                                            android:text="2K-4K"
                                            android:textColor="@color/origin_new" />

                                        <TextView
                                            android:id="@+id/tv_mm"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tv_home_name"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:layout_marginTop="@dimen/space_8"
                                            android:singleLine="true"
                                            android:text="本科/上海"
                                            android:textColor="@color/text_gray"
                                            android:textSize="@dimen/text_size_10" />

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/space_divider_1"
                                        android:layout_marginRight="@dimen/space_30"
                                        android:layout_marginTop="@dimen/space_5"
                                        android:background="@color/text_gray" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginTop="@dimen/space_5"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tv_home_name_co"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:singleLine="true"
                                            android:text="浙江优正"
                                            android:textColor="@color/text_gray"
                                            android:textSize="@dimen/text_size_12" />


                                        <TextView
                                            android:id="@+id/tv_below"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tv_home_name_co"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:layout_marginTop="@dimen/space_4"
                                            android:singleLine="true"
                                            android:text="电子商务/软件开发"
                                            android:textColor="@color/text_gray"
                                            android:textSize="@dimen/text_size_12" />

                                    </RelativeLayout>

                                </LinearLayout>


                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_8"
                                android:background="@color/bg_all"/>

                            <RelativeLayout
                                android:id="@+id/rl_rl_click"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="@dimen/space_8"
                                android:layout_weight="1"
                                android:background="@color/text_white"
                                android:paddingLeft="@dimen/space_5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_toRightOf="@+id/iv_logo"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/space_5"
                                    android:paddingTop="@dimen/space_8">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tv_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:layout_toLeftOf="@+id/tv_tv_money"
                                            android:gravity="start"
                                            android:text="软件测试工程师"
                                            android:textColor="@color/text_main_gray"
                                            android:textSize="@dimen/text_size_13" />

                                        <TextView
                                            android:id="@+id/tv_tv_money"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:layout_marginRight="@dimen/space_10"
                                            android:text="2K-4K"
                                            android:textColor="@color/origin_new" />

                                        <TextView
                                            android:id="@+id/tv_mmm"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tv_name"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:layout_marginTop="@dimen/space_8"
                                            android:singleLine="true"
                                            android:text="本科/上海"
                                            android:textColor="@color/text_gray"
                                            android:textSize="@dimen/text_size_10" />

                                    </RelativeLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/space_divider_1"
                                        android:layout_marginRight="@dimen/space_30"
                                        android:layout_marginTop="@dimen/space_5"
                                        android:background="@color/text_gray" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_marginTop="@dimen/space_5"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/tv_name_co"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:singleLine="true"
                                            android:text="浙江优正"
                                            android:textColor="@color/text_gray"
                                            android:textSize="@dimen/text_size_12" />


                                        <TextView
                                            android:id="@+id/tv_below_below"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tv_name_co"
                                            android:layout_marginLeft="@dimen/space_3"
                                            android:layout_marginTop="@dimen/space_4"
                                            android:singleLine="true"
                                            android:text="电子商务/软件开发"
                                            android:textColor="@color/text_gray"
                                            android:textSize="@dimen/text_size_12" />

                                    </RelativeLayout>

                                </LinearLayout>


                            </RelativeLayout>
                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/space_8"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:paddingTop="@dimen/space_10"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@color/text_white"
                            android:paddingBottom="@dimen/space_10">

                            <TextView
                                android:paddingLeft="@dimen/space_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/intriduce_icon"
                                android:drawablePadding="@dimen/space_3"
                                android:src="@mipmap/kkhj"
                                android:text="公司推荐"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_size_14" />

                            <TextView
                                android:paddingRight="@dimen/space_10"
                                android:id="@+id/tv_more2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingLeft="@dimen/space_20"
                                android:text="更多"
                                android:textColor="#878787"
                                android:textSize="@dimen/text_size_11" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_divider_2"
                                android:layout_below="@+id/tv_more2"
                                android:layout_marginTop="@dimen/space_8"
                                android:background="@color/text_blue_new" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/tv_more2"
                                android:layout_marginTop="@dimen/space_15"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:id="@+id/rl_rl_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="@dimen/space_15"
                                    android:layout_marginRight="@dimen/space_15"
                                    android:layout_weight="1"
                                    android:background="@color/text_white">


                                    <LinearLayout
                                        android:layout_marginLeft="@dimen/space_20"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >

                                    <ImageView
                                        android:id="@+id/iv_icon1"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/gongsixinxi" />

                                    <TextView
                                        android:singleLine="true"
                                        android:id="@+id/tv_introd_one"
                                        android:textSize="@dimen/text_size_12"
                                        android:textColor="@color/text_black"
                                        android:layout_marginLeft="@dimen/space_10"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    </LinearLayout>

                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/space_8"
                                    android:background="@color/bg_all"/>

                                <RelativeLayout
                                    android:id="@+id/rl_rl_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="@dimen/space_15"
                                    android:layout_marginRight="@dimen/space_15"
                                    android:layout_marginTop="@dimen/space_15"
                                    android:layout_weight="1"
                                    android:background="@color/text_white">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="@dimen/space_20"
                                        >

                                    <ImageView
                                        android:id="@+id/iv_icon2"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/gongsixinxi" />

                                    <TextView
                                        android:singleLine="true"
                                        android:id="@+id/tv_introd_two"
                                        android:textSize="@dimen/text_size_12"
                                        android:textColor="@color/text_black"
                                        android:layout_marginLeft="@dimen/space_10"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    </LinearLayout>
                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/space_8"
                                    android:background="@color/bg_all"/>

                                <RelativeLayout
                                    android:id="@+id/rl_rl_three"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="@dimen/space_15"
                                    android:layout_marginRight="@dimen/space_15"
                                    android:layout_marginTop="@dimen/space_15"
                                    android:layout_weight="1"
                                    android:background="@color/text_white">

                                    <LinearLayout
                                        android:layout_marginLeft="@dimen/space_20"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        >

                                    <ImageView
                                        android:id="@+id/iv_icon13"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/gongsixinxi" />

                                    <TextView
                                        android:singleLine="true"
                                        android:id="@+id/tv_introd_three"
                                        android:textSize="@dimen/text_size_12"
                                        android:textColor="@color/text_black"
                                        android:layout_marginLeft="@dimen/space_10"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                            </LinearLayout>

                                </RelativeLayout>

                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/text_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_delay_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/huifuzuikuai"
                        android:drawablePadding="@dimen/space_5"
                        android:text="DELAY"
                        android:textColor="@color/text_blue_new"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_delay_name"
                        android:text="回复最快"
                        android:textSize="@dimen/text_size_14"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_divider_2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:background="@color/text_blue_new" />

                    <TextView
                        android:id="@+id/tv_more_delay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/space_20"
                        android:paddingRight="@dimen/space_15"
                        android:text="更多"
                        android:textColor="#878787"
                        android:textSize="@dimen/text_size_11" />

                </RelativeLayout>

                <com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView
                    android:id="@+id/ls_replay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:divider="@null"></com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/text_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_hot_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/hot_icon"
                        android:drawablePadding="@dimen/space_5"
                        android:text="HOT"
                        android:textColor="@color/text_blue_new"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_hot_name"
                        android:text="热门职位"
                        android:textSize="@dimen/text_size_14"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_divider_2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:background="@color/text_blue_new" />

                    <TextView
                        android:id="@+id/tv_more4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/space_20"
                        android:paddingRight="@dimen/space_15"
                        android:text="更多"
                        android:textColor="#878787"
                        android:textSize="@dimen/text_size_11" />

                </RelativeLayout>

                <com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView
                    android:id="@+id/ls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"></com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/text_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_new_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/new_job_icon"
                        android:drawablePadding="@dimen/space_5"
                        android:text="NEW"
                        android:textColor="@color/text_blue_new"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_new_name"
                        android:text="最新职位"
                        android:textSize="@dimen/text_size_14"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_divider_2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/space_10"
                        android:background="@color/text_blue_new" />

                    <TextView
                        android:id="@+id/tv_more5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/space_20"
                        android:paddingRight="@dimen/space_15"
                        android:text="更多"
                        android:textColor="#878787"
                        android:textSize="@dimen/text_size_11" />

                </RelativeLayout>

                <com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView
                    android:id="@+id/ls_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"></com.youzheng.tongxiang.huntingjob.UI.Widget.NoScrollListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/text_white"
                android:orientation="vertical">

