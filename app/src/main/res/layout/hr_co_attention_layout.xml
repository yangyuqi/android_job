<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/text_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_layout"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_red"
                    android:text="*"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/space_3"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_normal_gray"
                    android:text="企业名称"
                    android:textSize="@dimen/text_size_16"
                    />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_16"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_light_gray"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_red"
                    android:text="*"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/space_3"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_normal_gray"
                    android:text="企业性质"
                    android:textSize="@dimen/text_size_16"
                    />

                <TextView
                    android:layout_marginRight="@dimen/space_10"
                    android:drawableRight="@mipmap/jiantouyou"
                    android:gravity="center_vertical"
                    android:id="@+id/edt_typr"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_16"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_light_gray"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_red"
                    android:text="*"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/space_3"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_normal_gray"
                    android:text="主行业"
                    android:paddingRight="@dimen/space_15"
                    android:textSize="@dimen/text_size_16"
                    />

                <TextView
                    android:layout_marginRight="@dimen/space_10"
                    android:drawableRight="@mipmap/jiantouyou"
                    android:gravity="center_vertical"
                    android:id="@+id/edt_address"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_16"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_light_gray"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_red"
                    android:text="*"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/space_3"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_normal_gray"
                    android:text="企业法人"
                    android:textSize="@dimen/text_size_16"
                    />

                <EditText
                    android:id="@+id/edt_co_boss"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_16"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_light_gray"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_red"
                    android:text="*"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/space_3"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_normal_gray"
                    android:text="身份证号"
                    android:textSize="@dimen/text_size_16"
                    />

                <EditText
                    android:maxLength="18"
                    android:id="@+id/edt_co_boss_num"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_16"
                    />

            </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/text_light_gray"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        />

    <LinearLayout
        android:paddingBottom="@dimen/space_30"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_red"
            android:text="*"
            />
        <TextView
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_normal_gray"
            android:text="营业执照"
            android:textSize="@dimen/text_size_16"
            />

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="70dp"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/zhaopian21"
            android:id="@+id/iv_change_icon"
            />

        <RelativeLayout
            android:layout_marginTop="@dimen/space_10"
            android:id="@+id/rl_edit"
            android:layout_marginLeft="@dimen/space_10"
            android:background="@drawable/login_bg_rl"
            android:layout_width="60dp"
            android:layout_height="25dp"
            >

            <TextView
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_12"
                android:drawablePadding="@dimen/space_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览"
                android:textColor="@color/text_blue_new"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_attention"
        android:layout_marginTop="@dimen/space_5"
        android:layout_gravity="center_vertical"
        android:background="@color/text_blue_new"
        android:textColor="@color/text_white"
        android:gravity="center"
        android:text="提交审核"
        android:textSize="@dimen/text_size_16"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        />

    </LinearLayout>