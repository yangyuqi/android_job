<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/bg_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <WebView
        android:id="@+id/ls_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></WebView>

    <LinearLayout
        android:paddingTop="@dimen/space_10"
        android:orientation="vertical"
        android:background="@color/text_white"
        android:paddingLeft="@dimen/space_10"
        android:paddingRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_14"
            android:drawablePadding="@dimen/space_3"
            android:drawableLeft="@mipmap/bb_write"
            android:textColor="@color/text_black"
            android:text="公司福利"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_marginTop="@dimen/space_5"
            android:layout_below="@+id/tv_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_2"
            android:background="@color/text_blue_new"/>
        <com.donkingliang.labels.LabelsView
            android:paddingBottom="@dimen/space_15"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_10"
            android:id="@+id/labelView"
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelBackground="@drawable/label_bg"
            app:labelTextColor="@drawable/label_text_color"
            app:labelTextSize="11sp"
            app:labelTextPaddingBottom="5dp"
            app:labelTextPaddingLeft="10dp"
            app:labelTextPaddingRight="10dp"
            app:labelTextPaddingTop="5dp"
            app:lineMargin="10dp"
            app:wordMargin="10dp"
            app:selectType="SINGLE"
            app:maxSelect="5"
            >

        </com.donkingliang.labels.LabelsView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/space_10"
        android:orientation="vertical"
        android:background="@color/text_white"
        android:padding="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_14"
            android:drawablePadding="@dimen/space_3"
            android:drawableLeft="@mipmap/bb_adress"
            android:textColor="@color/text_black"
            android:text="工作地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_marginTop="@dimen/space_5"
            android:layout_below="@+id/tv_more"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_2"
            android:background="@color/text_blue_new"/>

        <TextView
            android:layout_marginTop="@dimen/space_7"
            android:text=""
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_gray"
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    </LinearLayout>
</ScrollView>