<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_above="@+id/ll"
            android:layout_margin="@dimen/space_15"
            android:background="@mipmap/beijing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <com.youzheng.tongxiang.huntingjob.UI.Widget.ViewPagerSlide
            android:id="@+id/vp_layout"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            ></com.youzheng.tongxiang.huntingjob.UI.Widget.ViewPagerSlide>

            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@mipmap/anniu"
                android:scaleType="fitXY"
                android:text="下一步"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_16" />

</LinearLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="45dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/view_one"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/space_5"
                    android:scaleType="fitXY"
                    android:src="@mipmap/no01"
                    />

                <ImageView
                    android:id="@+id/view_two"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/no02"
                    />

                <ImageView
                    android:src="@mipmap/no02"
                    android:id="@+id/view_three"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_10"
                    android:scaleType="fitXY"
                     />

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/no02"
                    android:id="@+id/view_four"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_10"
                     />

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/view_five"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_10"
                    android:src="@mipmap/no02" />

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/no02"
                    android:id="@+id/view_six"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_10"
                    />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>