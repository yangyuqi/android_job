<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="280dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:background="@drawable/main_color">

            <TextView
                android:text="我的"
                android:textColor="@color/text_white"
                android:textSize="@dimen/space_15"
                android:paddingTop="@dimen/space_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="65dp"
                android:id="@+id/rl_user"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <com.youzheng.tongxiang.huntingjob.UI.Widget.CircleImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/gggggroup"
                    />

                <LinearLayout
                    android:id="@+id/ll_show1"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_16"
                        />

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_personal"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_light_gray"
                        android:textSize="@dimen/text_size_14"
                        android:singleLine="true"
                        />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/ll_co_home"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="68dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/ll_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/space_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业主页"
                        android:textColor="@color/text_normal_gray"
                        android:textSize="@dimen/text_size_13"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_reciver"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/ll_get_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_marginTop="@dimen/space_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收到简历"
                        android:textColor="@color/text_normal_gray"
                        android:textSize="@dimen/text_size_13"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_make_video"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/ll_make_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频制作"
                        android:layout_marginTop="@dimen/space_3"
                        android:textColor="@color/text_normal_gray"
                        android:textSize="@dimen/text_size_13"
                        />


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <LinearLayout
                android:paddingRight="@dimen/space_15"
                android:paddingLeft="@dimen/space_15"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/rl_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:layout_marginLeft="@dimen/space_20"
                        android:drawablePadding="@dimen/space_20"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业信息"
                        android:textColor="@color/text_normal_gray"
                        android:textSize="@dimen/text_size_14"
                        android:drawableLeft="@mipmap/ll_co_icon"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiantouyou"
                        />

                </RelativeLayout>
                <View
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginLeft="@dimen/space_25"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_divider_1"
                    android:background="@color/text_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_deliver"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:layout_marginLeft="@dimen/space_20"
                        android:drawablePadding="@dimen/space_25"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业认证"
                        android:textColor="@color/text_normal_gray"
                        android:textSize="@dimen/text_size_14"
                        android:drawableLeft="@mipmap/ll_co"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiantouyou"
                        />

                </RelativeLayout>
                <View
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginLeft="@dimen/space_25"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_divider_1"
                    android:background="@color/text_gray"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_bang_phone"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:layout_marginLeft="@dimen/space_20"
                        android:drawablePadding="@dimen/space_20"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号绑定"
                        android:textColor="@color/text_normal_gray"
                        android:textSize="@dimen/text_size_14"
                        android:drawableLeft="@mipmap/zhanghaobangding"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiantouyou"
                        />

                </RelativeLayout>
                <View
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginLeft="@dimen/space_25"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_divider_1"
                    android:background="@color/text_gray"/>
                <RelativeLayout
                    android:id="@+id/rl_secret"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:textColor="@color/text_normal_gray"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginLeft="@dimen/space_20"
                        android:drawablePadding="@dimen/space_20"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浏览过的简历"
                        android:drawableLeft="@mipmap/ll_see"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiantouyou"
                        />

                </RelativeLayout>

                <View
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginLeft="@dimen/space_25"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_divider_1"
                    android:background="@color/text_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_invite"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:textColor="@color/text_normal_gray"
                        android:textSize="@dimen/text_size_14"
                        android:layout_marginLeft="@dimen/space_20"
                        android:drawablePadding="@dimen/space_20"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面试邀请"
                        android:drawableLeft="@mipmap/ll_invite"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiantouyou"
                        />

                </RelativeLayout>

                <View
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginLeft="@dimen/space_25"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_divider_1"
                    android:background="@color/text_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_collect"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_normal_gray"
                        android:layout_marginLeft="@dimen/space_20"
                        android:drawablePadding="@dimen/space_21"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏夹"
                        android:drawableLeft="@mipmap/ll_collect"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiantouyou"
                        />

                </RelativeLayout>

                <View
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginLeft="@dimen/space_25"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_divider_1"
                    android:background="@color/text_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_see"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_normal_gray"
                        android:layout_marginLeft="@dimen/space_22"
                        android:drawablePadding="@dimen/space_20"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="谁看过我"
                        android:drawableLeft="@mipmap/ll_who_see"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiantouyou"
                        />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:paddingRight="@dimen/space_15"
                android:paddingLeft="@dimen/space_15"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/rl_help"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:paddingBottom="@dimen/space_5"
                    android:paddingTop="@dimen/space_5">

                    <TextView
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_20"
                        android:drawableLeft="@mipmap/ll_message"
                        android:drawablePadding="@dimen/space_20"
                        android:text="帮助与反馈" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/space_15"
                        android:src="@mipmap/jiantouyou" />

                </RelativeLayout>


                <View
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_marginLeft="@dimen/space_25"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_divider_1"
                    android:background="@color/text_gray"/>

                <RelativeLayout
                    android:id="@+id/rl_set"
                    android:paddingBottom="@dimen/space_5"
                    android:paddingTop="@dimen/space_5"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    >
                    <TextView
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/text_normal_gray"
                        android:layout_marginLeft="@dimen/space_20"
                        android:drawablePadding="@dimen/space_20"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置"
                        android:drawableLeft="@mipmap/ll_setting"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/space_15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiantouyou"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>