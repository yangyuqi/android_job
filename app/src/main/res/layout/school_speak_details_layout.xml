<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:background="@color/text_white"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <RelativeLayout
            android:background="@color/text_blue_new"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fanhui"
                android:padding="@dimen/space_15"
                />


        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/gongsixinxi"
            />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/text_white"
        android:id="@+id/ll_name"
        android:paddingLeft="@dimen/space_20"
        android:layout_toRightOf="@+id/iv_co_icon"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/tv_co_name"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南京公司"
            android:textColor="@color/text_main_gray"
            android:textSize="@dimen/text_size_15"
            />


    </LinearLayout>

    <LinearLayout
        android:paddingBottom="@dimen/space_5"
        android:paddingTop="@dimen/space_5"
        android:background="@color/text_white"
        android:id="@+id/ll_name_2"
        android:paddingLeft="@dimen/space_20"
        android:layout_below="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_co_icon"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_ctype"
            android:drawablePadding="@dimen/space_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="民营企业"
            android:textSize="@dimen/text_size_10"
            android:drawableLeft="@mipmap/dodo_type"
            />


    </LinearLayout>

    <LinearLayout
        android:paddingBottom="@dimen/space_5"
        android:background="@color/text_white"
        android:paddingLeft="@dimen/space_20"
        android:paddingTop="5dp"
        android:layout_below="@+id/ll_name_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_co_icon"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_businness"
            android:drawablePadding="@dimen/space_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电子商务"
            android:textSize="@dimen/text_size_10"
            android:drawableLeft="@mipmap/bb_adress"
            />

    </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/space_12"
            android:orientation="vertical"
            android:background="@color/text_white"
            android:padding="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/text_size_14"
                android:drawablePadding="@dimen/space_3"
                android:drawableLeft="@mipmap/xiangmujingli__qq"
                android:textColor="@color/text_black"
                android:text="宣讲会详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_marginTop="@dimen/space_10"
                android:layout_below="@+id/tv_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_2"
                android:background="@color/text_blue_new"/>


            <WebView
                android:id="@+id/web"
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </WebView>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:background="@color/text_white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_5"
            android:background="@drawable/yellow_bg"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="@dimen/space_2"
                android:paddingBottom="@dimen/space_3"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/toudijianl11i"
                    />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_speak"
            android:layout_marginLeft="@dimen/space_8"
            android:text="我要报名"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
            </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>