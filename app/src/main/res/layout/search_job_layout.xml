<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/main_color"
                    android:scaleType="fitXY"
                    />

                <RelativeLayout
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_10"
                        android:src="@mipmap/fanhui"
                        android:layout_centerVertical="true"
                        />

                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_go_search"
                        android:layout_toRightOf="@+id/iv_back"
                        android:layout_gravity="center_vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="29dp">

                        <RelativeLayout
                            android:clickable="true"
                            android:focusableInTouchMode="true"
                            android:alpha="0.7"
                            android:background="@drawable/search_bg_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></RelativeLayout>

                        <EditText
                            android:drawablePadding="@dimen/space_10"
                            android:singleLine="true"
                            android:paddingLeft="10dp"
                            android:id="@+id/tv_search"
                            android:cursorVisible="true"
                            android:textColorHint="@color/text_white"
                            android:textSize="@dimen/text_size_13"
                            android:background="@null"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_go_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="搜索"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_size_13"
                        android:padding="@dimen/space_15"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/space_2"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    >

                    <RelativeLayout
                        android:id="@+id/rl_zhineng"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_jingyan"
                        android:textSize="@dimen/text_size_11"
                        android:drawablePadding="@dimen/space_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作经验"
                        android:textColor="@color/text_white"
                        android:gravity="center"
                        android:drawableRight="@mipmap/xialasanjiao"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_work_self"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                    <TextView
                        android:id="@+id/tv_self"
                        android:textSize="@dimen/text_size_11"
                        android:drawablePadding="@dimen/space_3"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作地点"
                        android:textColor="@color/text_white"
                        android:gravity="center"
                        android:drawableRight="@mipmap/xialasanjiao"
                        />
                </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_gongzi"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    <TextView
                        android:singleLine="true"
                        android:id="@+id/tv_money"
                        android:textSize="@dimen/text_size_11"
                        android:drawablePadding="@dimen/space_3"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="薪资范围"
                        android:textColor="@color/text_white"
                        android:gravity="center"
                        android:drawableRight="@mipmap/xialasanjiao"
                        />
                </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_xueli"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                    <TextView
                        android:id="@+id/tv_xueli"
                        android:textSize="@dimen/text_size_11"
                        android:drawablePadding="@dimen/space_3"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="要求"
                        android:textColor="@color/text_white"
                        android:gravity="center"
                        android:drawableRight="@mipmap/xialasanjiao"
                        /></RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <com.liaoinstan.springview.widget.SpringView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:type="follow"
                android:id="@+id/sv"
                app:footer="@layout/default_footer"
                app:header="@layout/default_header"
                >

            <ListView
                android:divider="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ls"
                ></ListView>

        </com.liaoinstan.springview.widget.SpringView>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            ></FrameLayout>

    <RelativeLayout
        android:layout_margin="@dimen/space_30"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/toujianli1"
        />
</RelativeLayout>
</RelativeLayout>