<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:background="@color/text_white"
        android:layout_width="match_parent"
        android:layout_height="235dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/boliang"
            android:scaleType="fitXY"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/rl_header"
            android:background="@drawable/main_color"
            android:layout_width="match_parent"
            android:layout_height="48dp">

        <TextView
            android:text="我的"
            android:textColor="@color/text_white"
            android:textSize="@dimen/space_15"
            android:paddingTop="@dimen/space_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/space_20"
            android:layout_below="@+id/rl_header"
            android:id="@+id/rl_user"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.youzheng.tongxiang.huntingjob.UI.Widget.CircleImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_icon"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@mipmap/morentouxiangnansheng"
                />

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_icon"
                android:id="@+id/ll_show1"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_5"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_17"
                    />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_personal"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_size_14"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_centerHorizontal="true"
               android:layout_below="@+id/iv_icon"
                android:id="@+id/ll_show2"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="暂未登录,点击登录"
                    android:textSize="14sp"
                    android:gravity="center"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/text_white"
            android:layout_width="match_parent"
            android:layout_height="72dp">


            <LinearLayout
                android:id="@+id/rl_deliver"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/invite_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投递箱"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_15"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/rl_invite"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/do_delevery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请函"
                    android:layout_marginTop="@dimen/space_5"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_15"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_video"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/do_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频制作"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_15"
                    />


            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:background="@color/text_white"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_user_info"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                >
                <TextView
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawablePadding="@dimen/space_20"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_15"
                    android:drawableLeft="@mipmap/user_center"
                    />

                <ImageView
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantouyou"
                    />

            </RelativeLayout>
            <View
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginLeft="@dimen/space_25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_gray"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_bang_phone"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                >
                <TextView
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawablePadding="@dimen/space_20"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号绑定"
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_14"
                    android:drawableLeft="@mipmap/zhanghaobangding"
                    />

                <ImageView
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantouyou"
                    />

            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginLeft="@dimen/space_25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_gray"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_secret"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                >
                <TextView
                    android:textColor="@color/text_normal_gray"
                    android:textSize="@dimen/text_size_14"
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawablePadding="@dimen/space_20"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐私设置"
                    android:drawableLeft="@mipmap/yinsi"
                    />

                <ImageView
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantouyou"
                    />

            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginLeft="@dimen/space_25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_gray"/>
            <RelativeLayout
                android:id="@+id/rl_speak"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                >
                <TextView
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/text_normal_gray"
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawablePadding="@dimen/space_20"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我参加的宣讲会"
                    android:drawableLeft="@mipmap/go_intervidew"
                    />

                <ImageView
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantouyou"
                    />

            </RelativeLayout>
            <View
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginLeft="@dimen/space_25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_gray"/>
            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                >
                <TextView
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/text_normal_gray"
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawablePadding="@dimen/space_20"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏夹"
                    android:drawableLeft="@mipmap/do_collect"
                    />

                <ImageView
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantouyou"
                    />

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginLeft="@dimen/space_25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_gray"/>

            <RelativeLayout
                android:id="@+id/rl_see"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                >
                <TextView
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/text_normal_gray"
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawablePadding="@dimen/space_20"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="谁看过我"
                    android:drawableLeft="@mipmap/who_see_me"
                    />

                <ImageView
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantouyou"
                    />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:background="@color/text_white"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/rl_help"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingBottom="@dimen/space_5"
                android:paddingTop="@dimen/space_5">

                <TextView
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/text_normal_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawableLeft="@mipmap/help_and_reback"
                    android:drawablePadding="@dimen/space_20"
                    android:text="帮助与反馈" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_15"
                    android:src="@mipmap/jiantouyou" />

            </RelativeLayout>

            <View
                android:visibility="visible"
                android:layout_marginRight="@dimen/space_18"
                android:layout_marginLeft="@dimen/space_25"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_divider_1"
                android:background="@color/text_gray"/>

            <RelativeLayout
                android:id="@+id/rl_set"
                android:paddingBottom="@dimen/space_5"
                android:paddingTop="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                >
                <TextView
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/text_normal_gray"
                    android:layout_marginLeft="@dimen/space_20"
                    android:drawablePadding="@dimen/space_20"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:drawableLeft="@mipmap/do_setting"
                    />

                <ImageView
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jiantouyou"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</ScrollView>