<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_layout"/>

    <RelativeLayout
        android:background="@color/text_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@mipmap/wangjimima" />

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_bg_rl">

            <EditText
                android:maxLength="11"
                android:inputType="number"
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@null"
                android:cursorVisible="true"
                android:drawableLeft="@mipmap/shoujihao__qq"
                android:drawablePadding="@dimen/space_20"
                android:hint="手机号"
                android:singleLine="true"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/login_bg_rl">

            <Button
                android:id="@+id/btn_get_code"
                android:textSize="@dimen/text_size_14"
                android:text="获取验证码"
                android:textColor="@color/text_white"
                android:layout_margin="@dimen/space_1"
                android:background="@mipmap/huoquyanzheng__qq"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"/>

            <EditText
                android:inputType="number"
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@null"
                android:cursorVisible="true"
                android:drawableLeft="@mipmap/yanzhengma__qq"
                android:drawablePadding="@dimen/space_20"
                android:hint="验证码"
                android:singleLine="true"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl6"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:background="@color/text_blue_new"
            android:scaleType="fitXY"
            android:text="确定"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_16" />


        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl4"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/login_bg_rl">

            <EditText
                android:inputType="textPassword"
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@null"
                android:cursorVisible="true"
                android:drawableLeft="@mipmap/mima_qq"
                android:drawablePadding="@dimen/space_20"
                android:hint="请输入密码"
                android:singleLine="true"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/login_bg_rl">

            <EditText
                android:inputType="textPassword"
                android:id="@+id/tv_again_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_10"
                android:background="@null"
                android:cursorVisible="true"
                android:drawableLeft="@mipmap/mima_qq"
                android:drawablePadding="@dimen/space_20"
                android:hint="再次输入密码"
                android:singleLine="true"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/text_size_13" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>