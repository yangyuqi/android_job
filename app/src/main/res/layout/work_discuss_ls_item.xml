<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        >
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_logo"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/gggggroup"
            />

        <RelativeLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/space_15"
            android:paddingTop="@dimen/space_15"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_toRightOf="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:paddingRight="@dimen/space_15"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:text="软件测试工程师"
                    android:textColor="@color/text_main_gray"
                    />


            </RelativeLayout>


                <TextView
                    android:visibility="gone"
                    android:paddingRight="@dimen/space_20"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_below"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/text_gray"
                    android:text="电子商务/软件开发"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    />


        </RelativeLayout>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_8"/>

</LinearLayout>