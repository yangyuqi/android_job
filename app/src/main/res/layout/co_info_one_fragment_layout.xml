<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/text_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请填写您的基本信息"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/text_black"
        android:drawableLeft="@mipmap/qiyemm"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/space_5"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginTop="@dimen/space_5"
        android:src="@mipmap/xian"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_13"
            />

        <RelativeLayout
            android:background="@drawable/user_info_bg"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:background="@null"
                android:textColor="@color/text_normal_gray"
                android:id="@+id/tv_time_time"
                android:paddingLeft="@dimen/space_10"
                android:textSize="@dimen/text_size_13"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请填写营业执照上公司名称"
                />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/space_15"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地"
            />

        <RelativeLayout
            android:background="@drawable/user_info_bg"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/text_normal_gray"
                android:id="@+id/edt_address"
                android:paddingLeft="@dimen/space_10"
                android:textSize="@dimen/text_size_13"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint=""
                />

            <ImageView
                android:id="@+id/iv_address"
                android:padding="@dimen/space_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/fenle22i"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/space_15"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在行业"
            />

        <RelativeLayout
            android:background="@drawable/user_info_bg"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/text_normal_gray"
                android:id="@+id/tv_type"
                android:paddingLeft="@dimen/space_10"
                android:textSize="@dimen/text_size_13"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint=""
                />

            <ImageView
                android:id="@+id/iv_type"
                android:padding="@dimen/space_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/fenle22i"
                />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_15">

        <TextView
            android:id="@+id/tv_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="联系人"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12" />

    <RelativeLayout
        android:layout_toLeftOf="@+id/rl_rl"
        android:layout_marginLeft="55dp"
        android:layout_toRightOf="@id/tv_mm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_info_bg">

        <TextView
            android:textColor="@color/text_normal_gray"
            android:id="@+id/edt_sex"
            android:paddingLeft="@dimen/space_10"
            android:textSize="@dimen/text_size_13"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint=""
            />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/space_20"
            android:id="@+id/rl_rl"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/user_info_bg">

            <TextView
                android:textColor="@color/text_normal_gray"
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/space_10"
                android:textSize="@dimen/text_size_13" />

            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/space_15"
                android:src="@mipmap/sanjiao" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="常用邮箱"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_size_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:background="@drawable/user_info_bg">

            <EditText
                android:background="@null"
                android:textColor="@color/text_normal_gray"
                android:id="@+id/tv_email"
                android:paddingLeft="@dimen/space_10"
                android:textSize="@dimen/text_size_13"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                />


        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl4"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/anniu"
        android:scaleType="fitXY"
        android:text="下一步"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>